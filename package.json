{
  "name": "moddle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "dev": "webpack serve --open",
    "build": "docker build . -t messanger",
    "start": "npm run build && docker run -p 3000:3000 -d messanger",
    "work": "webpack && node server.js",
    "test": "jest",
    "lint:ts": "npx eslint **/*.{ts,tsx}",
    "lint:ts:fix": "npx eslint **/*.{ts,tsx} --fix",
    "lint:css": "npx stylelint **/*.css",
    "lint:css:fix": "npx stylelint **/*.css --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run lint:ts && npm run lint:css"
    }
  },
  "browser": {
    "browser": "dist/handlebars.js"
  },
  "alias": {
    "api": "./src/api",
    "data": "./src/data",
    "pages": "./src/pages",
    "utils": "./src/utils",
    "components": "./src/components",
    "store": "./src/store",
    "controllers": "./src/controllers"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/body-parser": "1.19.2",
    "express": "4.18.1",
    "nanoid": "3.3.3"
  },
  "devDependencies": {
    "@babel/core": "7.19.3",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.18.6",
    "@testing-library/dom": "8.19.0",
    "@testing-library/jest-dom": "5.16.5",
    "@types/handlebars-webpack-plugin": "2.2.2",
    "@types/jest": "29.2.2",
    "@types/jsdom": "20.0.1",
    "@types/node": "18.7.23",
    "@types/webpack": "5.28.0",
    "@types/webpack-dev-server": "4.7.2",
    "@typescript-eslint/eslint-plugin": "5.38.1",
    "babel-jest": "29.3.1",
    "babel-plugin-handlebars-inline-precompile": "2.1.1",
    "chai": "4.3.6",
    "css-loader": "6.7.1",
    "dotenv": "16.0.3",
    "eslint": "8.24.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-standard-with-typescript": "23.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-n": "15.3.0",
    "eslint-plugin-promise": "6.0.1",
    "handlebars": "4.7.7",
    "handlebars-webpack-plugin": "2.2.1",
    "husky": "8.0.2",
    "i": "0.3.7",
    "identity-obj-proxy": "3.0.0",
    "jest": "27.5.1",
    "jsdom": "20.0.2",
    "mocha": "10.1.0",
    "npm": "8.19.2",
    "postcss": "8.4.17",
    "postcss-import": "15.0.0",
    "postcss-preset-env": "6.7.0",
    "precompile-handlebars": "1.0.4",
    "style-loader": "3.3.1",
    "stylelint": "14.13.0",
    "stylelint-config-standard": "28.0.0",
    "ts-loader": "9.4.1",
    "ts-node": "10.9.1",
    "typescript": "4.8.4",
    "typescript-hbs-plugin": "0.1.1",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.11.1"
  },
  "jest": {
    "testEnvironment": "jsdom",

    "moduleNameMapper": {
      "\\.(css)$": "identity-obj-proxy",
      "^api(.*)$": "<rootDir>/src/api$1",
      "^data(.*)$": "<rootDir>/src/data$1",
      "^pages(.*)$": "<rootDir>/src/pages$1",
      "^utils(.*)$": "<rootDir>/src/utils$1",
      "^components(.*)$": "<rootDir>/src/components$1",
      "^store(.*)$": "<rootDir>/src/store$1",
      "^controllers(.*)$": "<rootDir>/src/controllers$1"
    }
  }
}
